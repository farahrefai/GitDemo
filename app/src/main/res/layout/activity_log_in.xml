<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ReaRobot.LogInActivity">


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="32sp"
        android:text="Welcome Back !"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="260dp"
        android:layout_height="225dp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@mipmap/signin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50sp"
        android:text="Your login"
        android:textColor="#2F3363"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/loginedt"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="Enter your login"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="#a2a4b5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32sp"
        android:text="Your password"
        android:textColor="#2F3363"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginPasswordedt"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#a2a4b5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ForgotPasswordtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220sp"
        android:layout_marginTop="10sp"
        android:text="Forgot Password ?"
        android:textColor="#1867A6"
        android:textSize="18sp"
        android:textStyle="normal" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/background_btn"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/signInProgressBar"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="@+id/loginBtn"
        app:layout_constraintStart_toStartOf="@+id/loginBtn"
        app:layout_constraintTop_toTopOf="@+id/loginBtn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DontHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65sp"
            android:layout_marginTop="@dimen/_32sdp"
            android:text="Don't have an account ?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/SignUptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="@dimen/_32sdp"
            android:text="Sign Up"
            android:textColor="#33A7A7"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>