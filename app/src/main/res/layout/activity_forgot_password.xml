<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ReaRobot.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="412dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/design" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="572dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Recovery "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:textSize="48sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Please enter your email address associated with your account. We will send you a password reset link."
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Emailedt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="34sp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Enter the email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Sendbtn"
            android:layout_width="350dp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60sp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_btn"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>