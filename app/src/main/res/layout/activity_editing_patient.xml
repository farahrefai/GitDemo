<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_25sdp"
        tools:context="com.example.ReaRobot.patientAccount.editingPatientActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient's full name : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's full name "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bed id : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/bedidEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's bed id"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/caseEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's case"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth date : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/birthDateEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's birth date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nationality : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/nationalityEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's nationality" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's address" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of entry : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/dateOfEntryEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter date of entry "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release date : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/releaseDateEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter date  of release" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/sexEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter the patient's sex"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number : "
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="normal"
                android:hint="Enter patient's phone number"/>
        </LinearLayout>
        <Button
            android:id="@+id/SaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            tools:layout_margin="32dp" />

        <TextView
            android:id="@+id/deletePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105sp"
            android:layout_marginTop="35sp"
            android:text="Delete this patient ?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>